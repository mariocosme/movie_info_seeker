<UserControl x:Class="Movie_Info_Seeker.Content.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="Tab" SelectedSource="/Content/AboutApp.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Movie Info Seeker" Source="/Content/AboutApp.xaml"/>
                <mui:Link DisplayName="Developer" Source="/Content/AboutDeveloper.xaml"/>
                <mui:Link DisplayName="Changelog" Source="/Content/Changelog.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
