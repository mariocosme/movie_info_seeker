<mui:ModernWindow x:Class="Movie_Info_Seeker_MUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="@Mário Cosme" IsTitleVisible="True"
        ResizeMode="CanResizeWithGrip"
        ContentSource="/Pages/MoviePage.xaml" WindowStartupLocation="CenterScreen" Width="1100" Height="650">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Movie Info Seeker">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Movies" Source="/Pages/MoviePage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="settings" GroupName="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="details" Source="/Pages/Settings.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
    
    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="settings" Source="/Pages/Settings.xaml" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
